# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/notebook_db
# For production, use MongoDB Atlas or cloud MongoDB:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/notebook_db?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Frontend
FRONTEND_URL=http://localhost:5173
# For production:
# FRONTEND_URL=https://your-frontend-domain.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# AI Services
OPENAI_API_KEY=your-openai-api-key-here
# Optional: For Gemini AI
# GEMINI_API_KEY=your-gemini-api-key-here
# Optional: For Groq AI
# GROQ_API_KEY=your-groq-api-key-here

# Python Whisper Service (for YouTube transcription)
# Local development:
PYTHON_AI_SERVICE_URL=http://localhost:8000
# Production (after deploying Whisper service):
# PYTHON_AI_SERVICE_URL=https://your-whisper-service.onrender.com
